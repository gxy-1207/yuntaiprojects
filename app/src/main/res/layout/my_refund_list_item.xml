<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="15dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="咨询费-退款"
        android:textSize="14sp"
        android:textColor="@color/textColoe_42"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-07-11 8:00"
        android:textSize="11sp"
        android:textColor="@color/textColor_99"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:id="@+id/iv_review_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_examination_passed"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_review_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:text="审核进度"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toRightOf="@+id/iv_review_type"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="30"
            android:textColor="@color/textColor_33"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>