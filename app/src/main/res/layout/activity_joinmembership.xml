<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/huiyuan_bg">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_header"
                android:layout_alignBottom="@+id/iv_header"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/iv_header"
                android:gravity="center"
                android:text="会飞的鱼"
                android:textColor="@color/textColor_604F3A"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="26dp"
                android:text="VIP"
                android:textColor="@color/textColor_432A17"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="17dp"
                android:text="尚未开通\n自购买当日起即可享受会员特权"
                android:textColor="@color/textColor_513021"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:text="开通VIP会员"
            android:textColor="@color/textColor_EEC8A3"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="尊享会员专属权益"
            android:textColor="@color/textColor_EEC8A3"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@mipmap/huiyuan_bg1"
            android:gravity="center"
            android:text="可查看所有音频合同"
            android:textColor="@color/textColor_EEC8A3"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/huiyuan_lin_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/huiyuan_fenlei_shape"
                android:drawableTop="@mipmap/huiyuan_audio"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingTop="10dp"
                android:paddingEnd="23dp"
                android:paddingBottom="15dp"
                android:text="音频"
                android:textColor="@color/textColor_EEC8A4"
                android:textSize="16dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:background="@drawable/huiyuan_fenlei_shape"
                android:drawableTop="@mipmap/huiyuan_contract"

                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingTop="10dp"
                android:paddingEnd="23dp"
                android:paddingBottom="15dp"
                android:text="合同"
                android:textColor="@color/textColor_EEC8A4"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_goumai"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="开通会员¥9.9 "
            android:textColor="@color/transparent_half"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>