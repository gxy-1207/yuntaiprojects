<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.ytfu.yuntaifawu.ui.lawyer.setting.act.LawyerSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tl_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/transparent_4c"
            android:minHeight="?android:attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@null"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title=""
            app:titleMargin="0dp">

            <TextView
                android:id="@+id/tv_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="8"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="法国外籍军团" />
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/tv_lvshi_renzheng_guanli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_white_to_gray"
            android:drawableEnd="@drawable/icon_rg_jianjiaohao"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="23dp"
            android:paddingEnd="23dp"
            android:paddingBottom="23dp"
            android:text="律师认证管理"
            android:textColor="#FF484848"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop=".5dp"
            android:background="@drawable/selector_white_to_gray"
            android:drawableEnd="@drawable/icon_rg_jianjiaohao"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="23dp"
            android:paddingEnd="23dp"
            android:paddingBottom="23dp"
            android:text="修改密码"
            android:textColor="#FF484848"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_to_gray"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="23dp"
            android:paddingEnd="23dp"
            android:paddingBottom="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_to_gray"
                android:gravity="center_vertical"
                android:text="绑定手机号码"
                android:textColor="#FF484848"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_setting_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_to_gray"
                android:drawableEnd="@drawable/icon_rg_jianjiaohao"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#FF484848"
                android:textSize="14sp"
                tools:text="18201515723" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_email_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_to_gray"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="23dp"
            android:paddingEnd="23dp"
            android:paddingBottom="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_to_gray"
                android:gravity="center_vertical"
                android:text="邮 箱"
                android:textColor="#FF484848"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_to_gray"
                android:drawableEnd="@drawable/icon_rg_jianjiaohao"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#FF484848"
                android:textSize="14sp"
                tools:text="18201515723" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_guanyuwomen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_white_to_gray"
            android:drawableEnd="@drawable/icon_rg_jianjiaohao"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="23dp"
            android:paddingEnd="23dp"
            android:paddingBottom="23dp"
            android:text="关于我们"
            android:textColor="#FF484848"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tuichu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:background="@drawable/login_out_shape"
        />
</RelativeLayout>