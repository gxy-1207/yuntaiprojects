<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_half"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/iv_header"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_header"
            android:text="name"
            android:textColor="@color/textColor_66"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_header"
            android:text="time"
            android:textColor="@color/textColor_B9"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_communicate_now"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/textview_communicate_now_shape"
            android:drawableLeft="@mipmap/icon_my_inquiry3"
            android:text="@string/textview_communicate_now"
            android:textColor="@color/transparent_half"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="23dp"
           android:layout_marginRight="16dp"
            android:gravity="center"
            android:textSize="11sp" />
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textcolor_f2"
            android:layout_below="@+id/iv_header"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="14dp"
            android:textSize="13sp"
            android:textColor="@color/textColor_66"
            android:text=""
            android:layout_marginBottom="15dp"
            android:lines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
</LinearLayout>