<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
   >
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image"
                android:layout_toRightOf="@id/image"
                android:layout_marginLeft="15dp"
                android:textSize="13sp"
                android:text=""
                android:textColor="#1B1B1B"
                android:maxLines="1"
                android:maxEms="10"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/text_excerpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_alignLeft="@+id/text_title"
                android:layout_below="@id/text_title"
                android:text=""
                android:textColor="#999999"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:maxEms="30"
                android:ellipsize="end"
                />
    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_alignLeft="@+id/text_excerpt"
        android:layout_above="@+id/text_price"
        android:text=""
        android:textColor="#333333"
        android:textSize="10sp"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:id="@+id/text_fu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:text="Â¥"
        android:textColor="#e13b38"
        android:layout_toRightOf="@id/image"
        android:layout_alignBottom="@+id/text_price"
        android:layout_alignLeft="@+id/text_title"
        />
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#e13b38"
                android:layout_toRightOf="@id/text_fu"
                android:layout_alignBottom="@+id/image"
                />


                <TextView
                    android:id="@+id/text_yuan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_price"
                    android:layout_alignTop="@+id/text_price"
                    android:layout_alignBottom="@id/text_price"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="#e13b38"
                    />


</RelativeLayout>