<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="温馨提示"
                android:textColor="#ff353535"
                android:textSize="15sp" />

            <TextView
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:id="@+id/tv_lawyer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="当前在线300名律师"
                android:textColor="#ffef6a6a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_play_sum"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                tools:text="等待解答的免费咨询问题共200件！选择悬赏咨询，律师十秒内优先为您解答！99%的问题得到了满意解决方案！"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#FFD9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play_free"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="21dp"
                    android:paddingBottom="21dp"
                    android:text="免费发布"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFD9D9D9" />

                <TextView
                    android:id="@+id/tv_play_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="21dp"
                    android:paddingBottom="21dp"
                    android:text="立即悬赏"
                    android:textColor="#FFEF6A6A"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>