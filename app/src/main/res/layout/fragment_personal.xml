<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:scrollbars="none"
    tools:context="com.ytfu.yuntaifawu.ui.users.fragment.UserPersonalFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:scrollbars="none"
        tools:context="com.ytfu.yuntaifawu.ui.users.act.UserPersonalFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_personal_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_personal_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="28dp">

                    <ImageView
                        android:id="@+id/iv_personal_avatar"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:contentDescription="@null"
                        tools:src="@mipmap/logo" />

                    <TextView
                        android:id="@+id/tv_personal_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@mipmap/icon_go"
                        android:drawablePadding="15dp"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textSize="20sp"
                        tools:text="法国外籍军团" />
                </LinearLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_personal_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_to_gray"
                        android:clickable="true"
                        android:drawableStart="@mipmap/icon_user_wallet"
                        android:drawableEnd="@drawable/icon_rg_jianjiaohao"
                        android:drawablePadding="15dp"
                        android:focusable="true"
                        android:paddingStart="10dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="18dp"
                        android:text="@string/txt_mine_wallet"
                        android:textColor="#FF484848"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#F1F2F2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_balance"
                            android:textColor="#ff777777"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_personal_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="#FF484848"
                            android:textSize="30sp"
                            tools:text="20" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_personal_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/shape_personal_withdraw"
                            android:paddingStart="18dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="18dp"
                            android:paddingBottom="6dp"
                            android:text="@string/txt_top_up"
                            android:textColor="#ff44a2f7"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_personal_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_to_gray"
                        android:drawableTop="@mipmap/icon_my_comment"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_my_comment"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                        android:background="#F2F2F2" />

                    <TextView
                        android:id="@+id/tv_personal_complaint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_to_gray"
                        android:drawableTop="@mipmap/icon_my_complaint"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_my_complaint"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                        android:background="#F2F2F2" />

                    <TextView
                        android:id="@+id/tv_personal_inquiry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_to_gray"
                        android:drawableTop="@mipmap/icon_my_inquiry2"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_my_inquiry"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_personal_refund"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_to_gray"
                        android:drawableTop="@mipmap/icon_refund"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_my_refund"
                        android:textColor="#ff666666"
                        android:textSize="12sp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_personal_oauth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_to_gray"
                    android:drawableStart="@mipmap/icon_lawyer_certification"
                    android:drawableEnd="@drawable/icon_rg_jianjiaohao"
                    android:drawablePadding="17dp"
                    android:paddingStart="12dp"
                    android:paddingTop="23dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="23dp"
                    android:text="@string/txt_lawyer_certification"
                    android:textColor="#ff484848"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/selector_white_to_gray"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">
<RelativeLayout
    android:id="@+id/rl_personal_announcement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_to_gray"
    >
    <TextView
        android:id="@+id/tv_personal_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_announcement"
        android:drawablePadding="17dp"
        android:paddingStart="12dp"
        android:paddingTop="23dp"
        android:paddingEnd="2dp"
        android:paddingBottom="23dp"
        android:text="@string/txt_announcement"
        android:textColor="#ff484848"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/red_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_toRightOf="@+id/tv_personal_announcement"
        android:src="@mipmap/iv_red_dot"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_rg_jianjiaohao"
        android:layout_alignParentEnd="true"
       android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        />
</RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_white_to_gray"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_personal_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_to_gray"
                    android:drawableStart="@mipmap/icon_lawyer_setting"
                    android:drawableEnd="@drawable/icon_rg_jianjiaohao"
                    android:drawablePadding="17dp"
                    android:paddingStart="12dp"
                    android:paddingTop="23dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="23dp"
                    android:text="@string/setting"
                    android:textColor="#ff484848"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl_personal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/transparent"

        android:minHeight="?android:attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@null"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=""
        app:titleMargin="0dp">

        <TextView
            android:id="@+id/tv_personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="法国外籍军团"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>