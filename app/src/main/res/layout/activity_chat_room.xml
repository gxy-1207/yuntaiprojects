<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.ytfu.yuntaifawu.ui.chatroom.activity.UserChatRoomActivity">


    <LinearLayout
        android:id="@+id/ll_room_lawyer_top"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@drawable/iconfontweixin"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="律师微信号"
            android:textColor="#ff44a2f7"

            android:textSize="12sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_room_sue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@mipmap/icon_complaint"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="起诉状"
            android:textColor="#555555"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView

            android:id="@+id/tv_room_assess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"

            android:drawableTop="@mipmap/icon_evaluate"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="评价Ta"
            android:textColor="#555555"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView

            android:id="@+id/tv_room_refund"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@mipmap/icon_refund_money"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="退款"
            android:textColor="#555555"
            android:textSize="12sp"
            android:visibility="gone"
            />
        <TextView

            android:id="@+id/tv_room_complaint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@mipmap/icon_complaint"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="投诉"
            android:textColor="#555555"
            android:textSize="12sp"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5"
            />

        <TextView
            android:id="@+id/tv_room_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"

            android:drawableTop="@mipmap/icon_red_package"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/txt_send_red_package"
            android:textColor="#555555"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_room_service_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_room_contract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@drawable/fwh_hetongku"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="合同库"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@drawable/fwh_qisuzhuang"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="免费写诉状"
            android:visibility="gone"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_helper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@drawable/fwh_kaitingzhushou"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="开庭助手"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_advisor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_white_to_gray"
            android:drawableTop="@drawable/fwh_falvguwen"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="法律顾问"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />
    </LinearLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srv_room_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_room_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/et_room_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/hint_input_send_message"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:textColorHint="#FF44A2F7"
            android:textSize="14sp"
            tools:text="asihdanhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwud\nhdwud\nqsdhud\ndhioqwid\nasihda\nhdwud\nqsdhud\ndhioqwid\n" />

        <TextView
            android:id="@+id/tv_room_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_btn_withdraw"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="@string/txt_send_message"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>