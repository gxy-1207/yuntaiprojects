<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.ytfu.yuntaifawu.utils.header.HomeLawyerContractHeaderController">


    <RelativeLayout
        android:id="@+id/rl_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_lawyer_contract_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_vip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="VIP会员中心"
                    android:textColor="#ff432a17"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="15dp"
                android:text="开通会员即可享受会员专属权益"
                android:textColor="#ff432a17"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header_arc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="#FDEFE6"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时免费"
                android:textColor="#ffff0000"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <com.ytfu.yuntaifawu.utils.view.RatioViewGroup
            android:id="@+id/rv_header_contract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_contract"
            app:rvg_ratio="2.538461538461538">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14.5dp"
                android:layout_marginTop="14dp"
                android:text="合同库"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </com.ytfu.yuntaifawu.utils.view.RatioViewGroup>

        <View
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent" />

        <com.ytfu.yuntaifawu.utils.view.RatioViewGroup
            android:layout_width="0dp"
            android:id="@+id/rv_header_audio"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_audio"
            app:rvg_ratio="2.538461538461538">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="14dp"
                android:layout_marginStart="14.5dp"
                android:text="音频库"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </com.ytfu.yuntaifawu.utils.view.RatioViewGroup>


    </LinearLayout>
</LinearLayout>