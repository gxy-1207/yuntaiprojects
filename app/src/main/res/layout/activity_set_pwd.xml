<?xml version="1.0" encoding="utf-8"?>
<!--设置密码-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_finish"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_close"
            android:padding="8dp" />
    </LinearLayout>

    <View
        android:layout_width="124dp"
        android:layout_height="12dp"
        android:layout_below="@+id/ll_title"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="80dp"
        android:background="#44A2F7" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="57dp"
        android:text="设置密码"
        android:textColor="#343434"
        android:textSize="28dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_shuru_pws"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/text_login"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

        <EditText
            android:id="@+id/et_shuru_pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="请输入6～12位密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="#666666"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_shuru_bi"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/xiaoyanjingbi"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_shuru_pwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_shuru_pws"
        android:layout_alignLeft="@id/rl_shuru_pws"
        android:layout_alignRight="@id/rl_shuru_pws"
        android:layout_marginTop="15dp"
        android:background="#EBEBEB"
        />
    <RelativeLayout
        android:id="@+id/rl_queren_pws"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/view_shuru_pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

        <EditText
            android:id="@+id/et_queren_pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请确认密码"
            android:textColor="#666666"
            android:textSize="15sp"
            android:maxLength="12"
            />

        <ImageView
            android:id="@+id/im_queren_kai"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/xiaoyanjingbi"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_queren_pwd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_queren_pws"
        android:layout_alignLeft="@id/rl_queren_pws"
        android:layout_alignRight="@id/rl_queren_pws"
        android:layout_marginTop="15dp"
        android:background="#EBEBEB"
        />
    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/view_queren_pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="请输入邮箱"
            android:textColor="#666666"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_email"
        android:layout_alignLeft="@id/rl_email"
        android:layout_alignRight="@id/rl_email"
        android:layout_marginTop="15dp"
        android:background="#EBEBEB"
        />
    <CheckBox
        android:id="@+id/cb_ty"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_email"
        android:layout_alignLeft="@+id/view_email"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:button="@null"
        android:background="@drawable/tytk_selector"
        />
    <TextView
        android:id="@+id/tv_tiaokuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cb_ty"
        android:layout_alignBottom="@+id/cb_ty"
        android:layout_toRightOf="@+id/cb_ty"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="10sp"
        android:text="我已阅读并同意"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_yhxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cb_ty"
        android:layout_alignBottom="@+id/cb_ty"
        android:layout_toRightOf="@+id/tv_tiaokuan"
        android:gravity="center"
        android:textColor="#e13b38"
        android:textSize="10sp"
        android:text="《用户服务协议》"
        />
    <TextView
        android:id="@+id/tv_he"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cb_ty"
        android:layout_alignBottom="@+id/cb_ty"
        android:layout_toRightOf="@+id/tv_yhxy"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="10sp"
        android:text="和"
        />
    <TextView
        android:id="@+id/tv_ys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cb_ty"
        android:layout_alignBottom="@+id/cb_ty"
        android:layout_toRightOf="@+id/tv_he"
        android:gravity="center"
        android:textColor="#e13b38"
        android:textSize="10sp"
        android:text="《隐私协议》"
        />
    <Button
        android:id="@+id/btn_queren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_ty"
        android:layout_marginTop="57dp"
        android:background="@drawable/denglu"
        android:layout_alignLeft="@id/rl_queren_pws"
        android:layout_alignRight="@id/rl_queren_pws"
        android:textSize="15sp"
        android:text="确认"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>