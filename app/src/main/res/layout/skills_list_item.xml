<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_to_gray">

        <TextView
            android:id="@+id/tv_skills_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColor_47"
            tools:text="起诉状使用技巧"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/iv_red_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@+id/tv_skills_title"
            android:src="@mipmap/iv_red_dot"
            android:layout_marginTop="11dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/tv_skill_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor_99"
            android:textSize="12sp"
            tools:text="2020-08-18"
            android:layout_below="@+id/tv_skills_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/gengduo"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>
</LinearLayout>