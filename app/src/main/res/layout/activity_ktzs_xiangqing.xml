<?xml version="1.0" encoding="utf-8"?><!--开庭助手详情-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/incled_title_bai_center" />

    <RelativeLayout
        android:id="@+id/rl_ktzs_title_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7">

        <ImageView
            android:id="@+id/image_ktzs_png"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_ktzs_xq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="title"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_come_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ktzs_xq_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="立即进入"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:layout_alignTop="@id/tv_come_in"
            android:layout_alignBottom="@id/tv_come_in"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_come_in"
            android:src="@drawable/gengduo_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/image_ktzs_png"
            android:layout_marginTop="20dp"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="40dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:background="#ffffff"
            android:scrollbars="none" />
    </LinearLayout>


</LinearLayout>