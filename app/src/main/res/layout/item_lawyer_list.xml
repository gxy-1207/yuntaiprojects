<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.ytfu.yuntaifawu.ui.chat.adapter.LawyerListAdapter">

    <CheckBox
        android:id="@+id/cb_lawyer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:button="@drawable/select_checkbox"
        android:checked="true"
        android:visibility="gone"
        android:enabled="false"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">


        <ImageView
            android:id="@+id/iv_lawyer_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            tools:src="@mipmap/logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lawyer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#ff1d1d1d"
                    android:textSize="14sp"
                    tools:text="法国外籍军团" />

                <TextView
                    android:id="@+id/tv_lawyer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    tools:text="10:00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lawyer_last"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#ff7a7a7a"
                    android:textSize="13sp"
                    tools:text="你好！有什么需要帮助的吗？" />

                <TextView
                    android:id="@+id/tv_lawyer_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ease_unread_count_bg"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    tools:text="1" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>