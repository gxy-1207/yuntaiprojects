<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incld_title_center" />

    <ImageView
        android:id="@+id/lvshi_da_icon"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitCenter"
        tools:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="#333333"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/youxiu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"

            android:text="优选律师"
            android:textColor="#D04940"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:drawableLeft="@drawable/wangpai"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="王牌律师"
            android:textColor="#D04940"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_lingyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="15dp"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_detail_dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/jingyan"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_detail_xueli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:drawableLeft="@drawable/xueli"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_detail_nianling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:drawableLeft="@drawable/nianling"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>