<?xml version="1.0" encoding="utf-8"?><!--验证码登录-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_finish"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_close"
            android:visibility="gone"
            android:padding="8dp" />
    </LinearLayout>

    <View
        android:layout_width="150dp"
        android:layout_height="9dp"
        android:layout_below="@+id/ll_title"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="80dp"
        android:background="#44A2F7" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="57dp"
        android:text="绑定手机号"
        android:textColor="#343434"
        android:textSize="28dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/text_login"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="83dp"
        android:layout_marginRight="37dp"
        android:background="@null"
        android:hint="@string/login_hint1"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#666666"
        android:textSize="15sp" />

    <View
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_num"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="37dp"
        android:background="#EBEBEB" />

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/view_name"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="37dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="8"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/huyzm_shape"
            android:gravity="center"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#44a2f7"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_code"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_code"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="37dp"
        android:background="#EBEBEB" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_code"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/denglu"
        android:text="绑定并登录"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</RelativeLayout>