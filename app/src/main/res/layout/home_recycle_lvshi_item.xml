<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:alpha="12"
            >

            <ImageView
                android:id="@+id/iv_home_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/hetong_top" />

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_home_head"
                android:text="name"
                android:textColor="#373737"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_yw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home_name"
                android:layout_alignLeft="@+id/tv_home_name"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优选律师"
                android:textColor="#FD6500"
                android:textSize="12sp"
                android:drawableLeft="@drawable/youxiu"
                android:drawablePadding="10dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王牌律师"
                    android:textColor="#FD6500"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:drawableLeft="@drawable/wangpai"
                    android:drawablePadding="10dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/home_xingzhuang"
                android:text="个人劳动争议"
                android:textColor="#FF620D"
                android:textSize="12sp"
               android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_home_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_yw"
                android:layout_alignLeft="@+id/ll_yw"
                android:layout_marginRight="24dp"
                android:layout_marginTop="9dp"
                android:maxLines="3"
                android:maxEms="50"
                android:ellipsize="end"
                android:text=""
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_marginBottom="13dp"
                />
        </RelativeLayout>
</LinearLayout>